<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_xlarge">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageHeaderMenu"
            android:layout_width="@dimen/widthImageHeader"
            android:layout_height="@dimen/heightImageHeader"
            android:layout_marginStart="@dimen/margin_xlarge"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:src="@drawable/ic_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/lnContainerMessageName"/>

    <LinearLayout
            android:id="@+id/lnContainerMessageName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_xlarge"
            android:layout_marginEnd="@dimen/margin_small"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/imageHeaderMenu"
            app:layout_constraintEnd_toStartOf="@+id/imgArrow"
            app:layout_constraintStart_toEndOf="@+id/imageHeaderMenu"
            app:layout_constraintTop_toTopOf="@+id/imageHeaderMenu">

        <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_welcome"/>

        <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Tony "
                android:maxLines="@integer/one_line"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size"/>

    </LinearLayout>

    <ImageView
            android:id="@+id/imgArrow"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="@dimen/margin_xlarge"
            android:layout_marginStart="@dimen/margin_xlarge"
            android:src="@drawable/ic_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/lnContainerMessageName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lnContainerMessageName"/>
</android.support.constraint.ConstraintLayout>